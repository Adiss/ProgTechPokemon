<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import com.cathive.fx.gravatar.GravatarImageView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane stylesheets="@../css/account_panel.css" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox styleClass="top-hbox">
            <GravatarImageView fx:id="gravatarImageView" styleClass="avatar"/>
            <GridPane styleClass="user-information-holder">
                <ImageView GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                    <Image url="@/images/user_informations.png"/>
                </ImageView>
                <Text styleClass="boldText" GridPane.columnIndex="0" GridPane.rowIndex="1" text="Username: "/>
                <Text styleClass="boldText" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="userDisplayName"/>
                <Text styleClass="boldText" GridPane.columnIndex="0" GridPane.rowIndex="2" text="Win: "/>
                <Text styleClass="boldText" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="userWinCounter"/>
                <Text styleClass="boldText" GridPane.columnIndex="0" GridPane.rowIndex="3" text="Loose: "/>
                <Text styleClass="boldText" GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="userLooseCounter"/>
            </GridPane>
        </HBox>
    </top>
    <center>
        <ScrollPane styleClass="PokemonHolderScrollPane">
            <TilePane fx:id="ownedPokemonHolderTilePane" styleClass="PokemonHolderTilePane">
            </TilePane>
        </ScrollPane>
    </center>
    <bottom>
        <HBox>
            <TilePane styleClass="partyPokemonHolder">
                <BorderPane fx:id="partyPokemon1Holder">
                    <top>
                        <ImageView fx:id="partyPokemon1Image"/>
                    </top>
                    <bottom>
                        <Text text="Pokemon1" fx:id="partyPokemon1Name" />
                    </bottom>
                </BorderPane>
                <BorderPane>
                    <top>
                        <ImageView fx:id="partyPokemon2Image"/>
                    </top>
                    <bottom>
                        <Text text="Pokemon2" fx:id="partyPokemon2Name"/>
                    </bottom>
                </BorderPane>
                <BorderPane>
                    <top>
                        <ImageView fx:id="partyPokemon3Image"/>
                    </top>
                    <bottom>
                        <Text text="Pokemon3" fx:id="partyPokemon3Name"/>
                    </bottom>
                </BorderPane>
                <BorderPane>
                    <top>
                        <ImageView fx:id="partyPokemon4Image"/>
                    </top>
                    <bottom>
                        <Text text="Pokemon4" fx:id="partyPokemon4Name"/>
                    </bottom>
                </BorderPane>
                <BorderPane>
                    <top>
                        <ImageView fx:id="partyPokemon5Image"/>
                    </top>
                    <bottom>
                        <Text text="Pokemon5" fx:id="partyPokemon5Name"/>
                    </bottom>
                </BorderPane>
                <BorderPane>
                    <top>
                        <ImageView fx:id="partyPokemon6Image"/>
                    </top>
                    <bottom>
                        <Text text="Pokemon6" fx:id="partyPokemon6Name"/>
                    </bottom>
                </BorderPane>
            </TilePane>
        </HBox>
    </bottom>
</BorderPane>
